<p id="notice"><%= notice %></p>

<% if params['enable_noisy'] %>
  <div class='enable-noisy'>
    <%= @entry.contents %>
  </div>
<% else %>
  <p>
    <b>Title:</b>
    <%= @entry.title %>
  </p>

  <div id='enable-tiny-scrollbar'>
    <div class="scrollbar"><div class="track"><div class="thumb"><div class="end">
    </div></div></div></div>
    <div class='viewport'>
      <div class='overview'>
        <%= @entry.contents %>
      </div>
    </div>
  </div>

  <hr>

  <div class="columns">
    <p>
    <%= @entry.contents %>
    </p>
  </div>

  <hr>

  <p>
    <b>Contents:</b>
    <%= image_tag "arrow.png", :class => "start_mark" %>
    <%= @entry.contents %>
  </p>


  <%= link_to 'Edit', edit_entry_path(@entry) %> |
  <%= link_to 'Back', entries_path %>
<% end %>
